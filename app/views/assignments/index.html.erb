<h1>All assignments for all ships:</h1>
<ul id="assignmentList">
<% @assignments.each do |a| %>
    <li><%= a.crew.formal_title %> is <%= link_to "assigned", ship_assignment_path(a.ship, a) %> to the <%= a.ship.name %>.</li>
<% end %>
</ul>
<br>

<h2>Create new assignment:</h2>
<%= form_for([@ship, @assignment]) do |f| %>
    
    <strong><%= f.label :name %></strong>
    <%= f.text_field :name %><br>
    
    <strong><%= f.label :description %></strong>
    <%= f.text_field :description %><br></br>
    
    <strong><%= f.label :ship_id %></strong><br>
    <!-- <%= f.collection_check_boxes :ship_id, Ship.all, :id, :name %><br></br> -->
    <%= f.select(:ship_id) do %>
        <%= options_from_collection_for_select(Ship.all, :id, :name, :selected => @assignment.ship_id) %>
    <% end %>

    <br></br>
    <strong><%= f.label :crew_id %></strong><br>
    
    <%= f.select(:crew_id) do %>
        <%= options_from_collection_for_select(Crew.all, :id, :name, :selected => @assignment.crew_id) %>
    <% end %>

    <br></br>
    <%= f.submit %>
<% end %>

<script>window.onload = postAssignment();</script>